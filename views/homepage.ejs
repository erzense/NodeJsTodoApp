<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/global.css" />
    <link rel="stylesheet" href="../css/homepage.css" />
    <title>Homepage</title>
  </head>
  <body>
    <div class="container">
      <div class="app">
        <div class="app-form">
          <form action="/homepage" method="POST">
            <label for="todo">Add Todo</label>
            <input type="text" name="todo" placeholder="Type a todo" />
            <label for="isDone">Is Done</label>
            <select name="isDone" id="">
              <option value="true">Yapıldı</option>
              <option value="false">Yapılmadı</option>
            </select>
            <label for="date">Date</label>
            <input type="date" name="date" />
            <button type="submit">Gönder</button>
          </form>
        </div>

        <div class="showApp">
          <ul class="todolist">
            <% todos.forEach(todo => { %>
              <% if (todo.isDone == false) { %>
                <li class="todo-list-item" style="background-color: rgb(230, 47, 47)">
              <% } %>
              <% if (todo.isDone == true) { %>
                <li class="todo-list-item" style="background-color: rgb(40, 201, 40)">
              <% } %>
              
                <div class="todo-item">
                  <div class="todo-item-text">
                    <p style="margin-right: 5px;"><%= todo.todo %></p>
                    <p><%= todo.date %></p>
                  </div>
                  <div class="todo-item-buttons">
                    <i class="bi bi-pencil"></i>
                   <a href="/homepage/delete/<%= todo.id %>"><i class="bi bi-trash"></i></a>
                  </div>
                </div>
              </li>
            <% }) %>
            
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
